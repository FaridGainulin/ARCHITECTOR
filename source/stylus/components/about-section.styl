.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0 40px 0
    +above($breakpoints.md)
      padding 90px 0 60px 0
    +above($breakpoints.xxl)
      padding 120px 0 89px 0

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 40px 0

  &__text
    position relative
    background-color #f3f3f3
    padding 15px 10px
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 10px
      padding 20px 5px 25px 15px
      width 350px
    +above($breakpoints.md)
      border-radius: 15px
      padding 25px 5px 30px 15px
      width 464px
    +above($breakpoints.xxl)
      border-radius: 20px
      padding 30px 5px 35px 20px
      width 525px
      height: 490px

  &__text-icon
    position: absolute
    width: 20px;
    height: auto;
    bottom: -7px;
    right: 12px;
    +above($breakpoints.sm)
      width: 28px;
      bottom: -8px;
      right: 14px;
    +above($breakpoints.md)
      width: 36px;
      bottom: -10px;
      right: 23px;
    +above($breakpoints.xxl)
      width 42px
      bottom: -11px
      right: 27px

  &__text-bottom
    padding-top 15px
    +above($breakpoints.sm)
      padding-top 30px
    +above($breakpoints.md)
      padding-top 35px
    +above($breakpoints.xxl)
      padding-top 40px

  &__img
    width 300px
    height: auto
    margin: 15px 0 0 -14px;
    +above($breakpoints.sm)
      position: absolute
      margin 0
      width: 450px;
      bottom: 0;
      right: -36px;
    +above($breakpoints.md)
      width: 598px;
      right: -85px;
    +above($breakpoints.xxl)
      width: 798px;
      right: -160px;

.about-section-bottom
  background-color #91B77C

  &__container
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 60px 0 60px 0
    +above($breakpoints.xxl)
      padding 80px 0 80px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 20px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      align-items: flex-start
      gap: 10px
      margin-top 30px
    +above($breakpoints.md)
      gap: 15px
      margin-top 35px
    +above($breakpoints.xxl)
      margin-top 40px
      gap: 20px
    input,
    button
      width 280px !important
      height: 50px !important
      +above($breakpoints.sm)
        width 220px !important
        height: 55px !important
      +above($breakpoints.md)
        width 240px !important
        height: 60px !important
      +above($breakpoints.xxl)
        width 260px !important
        height: 80px !important

  &__form-adaptive
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px
